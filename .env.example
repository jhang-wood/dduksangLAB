# dduksangLAB 환경변수 템플릿
# 이 파일을 .env.local로 복사하여 실제 값으로 변경하세요
# cp .env.example .env.local

# 📊 환경 설정
NODE_ENV=development

# 🔓 클라이언트 환경변수 (브라우저에서 접근 가능)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
NEXT_PUBLIC_TOSS_CLIENT_KEY=test_ck_your-toss-client-key
NEXT_PUBLIC_APP_URL=https://your-domain.com
NEXT_PUBLIC_SITE_URL=https://your-domain.com

# 🔒 서버 전용 환경변수 (보안 중요)
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key
JWT_SECRET=your-jwt-secret-min-32-chars
ENCRYPTION_KEY=your-encryption-key-64-chars
CRON_SECRET=your-cron-secret-key

# 💳 결제 시스템 (선택사항)
TOSS_SECRET_KEY=test_sk_your-toss-secret-key
PAYAPP_SECRET_KEY=your-payapp-secret-key
PAYAPP_VALUE=your-payapp-value
PAYAPP_USER_CODE=your-payapp-user-code
PAYAPP_STORE_ID=your-payapp-store-id

# 🤖 AI 서비스 (선택사항)
OPENAI_API_KEY=sk-your-openai-api-key
GEMINI_API_KEY=your-gemini-api-key

# 📢 알림 시스템 (선택사항)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id
TELEGRAM_WEBHOOK_SECRET=your-telegram-webhook-secret
TELEGRAM_ALLOWED_USER_ID=your-telegram-user-id
TELEGRAM_BUSINESS_TOKEN=your-telegram-business-bot-token
TELEGRAM_TEAM_CHAT_ID=your-team-telegram-chat-id
N8N_WEBHOOK_URL=https://your-n8n-webhook.com
NOTIFICATION_LEVEL=warning
NOTIFICATION_RATE_LIMIT_PER_MINUTE=10
NOTIFICATION_RATE_LIMIT_PER_HOUR=100

# 🛡️ 보안 설정 (선택사항)
DATABASE_URL=postgresql://user:pass@host:port/db
ADMIN_EMAIL=admin@your-domain.com
ADMIN_PASSWORD=your-admin-password
ADMIN_ALLOWED_IPS=127.0.0.1,your-ip-address

# 🔧 Redis 큐 시스템 (선택사항)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0

# 📊 모니터링 시스템 (선택사항)
MONITORING_ENABLED=true
MONITORING_INTERVAL=30000
PERFORMANCE_MONITORING_ENABLED=true
PERFORMANCE_ALERT_WEBHOOK=https://your-alert-webhook.com

# 📈 성능 메트릭 임계값 (선택사항)
CPU_USAGE_THRESHOLD=70
MEMORY_USAGE_THRESHOLD=80
DISK_USAGE_THRESHOLD=85
RESPONSE_TIME_THRESHOLD=3000
ERROR_RATE_THRESHOLD=0.1

# 🔄 자동 복구 설정 (선택사항)
AUTO_RECOVERY_ENABLED=true
SELF_HEALING_ENABLED=true
MAX_RECOVERY_ATTEMPTS=3
RECOVERY_RETRY_DELAY=5000
ESCALATION_DELAY=300000
HEALTH_CHECK_INTERVAL=30000

# 🤖 워크플로우 설정 (선택사항)
WORKFLOW_AUTO_START=true
CONTENT_GENERATION_SCHEDULE="0 */2 * * *"
SYSTEM_CLEANUP_SCHEDULE="0 2 * * *"
CONTENT_BATCH_SIZE=5

# 🧠 AI 로드밸런싱 (선택사항)
AI_LOAD_BALANCER_STRATEGY=intelligent
AI_HEALTH_CHECK_INTERVAL=60000
AI_CIRCUIT_BREAKER_THRESHOLD=0.5

# 🧠 진단 시스템 (선택사항)
DIAGNOSTIC_AUTO_RUN=true
DIAGNOSTIC_SCHEDULE="0 */6 * * *"
DIAGNOSTIC_HISTORY_LIMIT=100

# 📋 대시보드 설정 (선택사항)
DASHBOARD_REFRESH_INTERVAL=30000
DASHBOARD_DATA_RETENTION_DAYS=30
DASHBOARD_METRICS_LIMIT=1000
